<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facade.GameOverPage"
             Title="GameOverPage"
             xmlns:local="clr-namespace:facade"
             x:DataType="local:MainPageViewModel">
    

    <ScrollView>
        <Grid Padding="0" RowSpacing="16" BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>

            <StackLayout HorizontalOptions="Fill" Padding="8" Grid.Row="0" Orientation="Horizontal"  >

                <Ellipse Fill="#FACADE"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         HeightRequest="260"
                         WidthRequest="380"
                         Stroke="black"
                         StrokeThickness="10"/>


            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Padding="2">
                <Label Text="#"
                       TextColor="Black"
                       FontSize="36"
                       VerticalOptions="Center"/>

                <Label Text="FACADE"
                       TextColor="#facade"
                       FontSize="40"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"/>

            </StackLayout>

            <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Padding="8">
                <Label Text="{Binding GuessCommand}"
                       x:Name="ResultLabel"
                       TextColor="Blue"
                       FontAttributes="Bold"
                       FontSize="40" 
                       VerticalOptions="Center"/>

            </StackLayout>

            <Grid Padding="12" Grid.Row="3" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                        Grid.Column="0"
                        Text="Replay"
                        WidthRequest="100"
                        HeightRequest="100"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontSize="22"/>
                <!--Clicked="Button_Clicked"-->

                <Button Grid.Row="0"
                        Grid.Column="1"
                        Text="New"
                        WidthRequest="100"
                        HeightRequest="100"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontSize="24"
                />

            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
